    <LinearLayout
        android:layout_width="407dp"
        android:layout_height="728dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/headprevent"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="@string/menu_preventive"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.077" />

        <TextView
            android:id="@+id/textViewprevent"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/desc_preventive" />

        <Button
            android:id="@+id/buttonpreventive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preventive_support" />

        <TextView
            android:id="@+id/heademotion"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:text="@string/emotional_support"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/textViewemotion"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="@string/desc_emotional" />

        <Button
            android:id="@+id/buttonemotion"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:text="@string/emotional_support_btn" />

        <TextView
            android:id="@+id/headdoc"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:text="@string/consult_a_doctor"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/textViewdoc"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="@string/desc_doc" />

        <Button
            android:id="@+id/button_doc"
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:text="@string/visit_doctor" />
